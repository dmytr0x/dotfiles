{
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  "project_panel": {
    "entry_spacing": "standard"
  },
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "tab_bar": {
    "show": true
  },
  "ui_font_size": 14.0,
  "ui_font_family": ".ZedMono",
  "current_line_highlight": "none",
  "buffer_font_size": 13.0,
  "buffer_line_height": { "custom": 1.4 },
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_family": ".ZedMono",
  "theme": "VSCode Dark Modern",
  "theme_overrides": {
    "VSCode Dark Modern": {
      "syntax": {
        "comment": { "color": "#3D6832" }
      }
    }
  },
  "icon_theme": "Catppuccin Mocha",
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "git_panel": {
    "scrollbar": {
      "show": "never"
    },
    "tree_view": true,
    "sort_by_path": false,
    "collapse_untracked_diff": true
  },
  "autosave": "on_focus_change",
  "format_on_save": "off",
  "base_keymap": "VSCode",
  "file_scan_exclusions": ["**/__pycache__", ".venv", ".ruff_cache"],
  "auto_update": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "session": {
    "restore_unsaved_buffers": true,
    "trust_all_worktrees": false
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "zai",
      "model": "glm-4.7"
    },
    "enable_feedback": false,
    "always_allow_tool_actions": false,
    "model_parameters": []
  },
  "language_models": {
    "openai_compatible": {
     "zai": {
       "api_url": "https://api.z.ai/api/coding/paas/v4",
        "available_models": [
          {
            "name": "glm-4.7",
            "display_name": "GLM-4.7",
            "max_tokens": 204800,
            "max_output_tokens": 98304,
            "max_completion_tokens": 204800,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": true,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  }
}
