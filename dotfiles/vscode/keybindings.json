[
  // === Editing:
  //
  //  shift+cmd+k - delete line
  //  cmd+backspace - delete all left
  //  ctrl+k - delete all right
  //  alt+backspace - delete word left
  //  ctrl+cmd+k - delete word from inside
  {
    "key": "ctrl+cmd+k",
    "command": "deleteInsideWord"
  },
  // === Code
  //
  //  cmd+k cmd+i - show hover (tooltip with signature)
  //  alt+f12 - peek definition (show code in lens)
  //  shift+cmd+space - trigger parameter hints
  //
  // === Search
  //
  // shift+cmd+f - search via activity bar  
  // shift+cmd+f - search via a new editor
  // In the search view:
  //    shift+cmd+j - toggle search details
  //    alt+cmd+c - toggle case sensitive
  //    alt+cmd+r - toggle regex
  //    alt+cmd+w - toggle whole word
  {
    "key": "shift+alt+f",
    "command": "search.action.openNewEditorFromView"
  },
  // === Change cursor position and scroll view port
  //  source: https://code.visualstudio.com/api/references/commands
  //
  {
    "key": "ctrl+z ctrl+t",
    "command": "cursorMove",
    "args": {
      "to": "viewPortTop"
    }
  },
  {
    "key": "ctrl+z ctrl+z",
    "command": "cursorMove",
    "args": {
      "to": "viewPortCenter"
    }
  },
  {
    "key": "ctrl+z ctrl+b",
    "command": "cursorMove",
    "args": {
      "to": "viewPortBottom"
    }
  },
  // === Editor size
  //
  // Make a current editor larger
  {
    "key": "alt+enter",
    "command": "workbench.action.minimizeOtherEditors",
    "when": "editorTextFocus"
  },
  // Reset editors size
  {
    "key": "shift+alt+enter",
    "command": "workbench.action.evenEditorWidths"
  },
  // === Editor groups
  //
  //  cmd+k cmd+m - Maximize editor group (toggable)
  //
  // - activate last editor group (e.g. from search or any input without triggering an action)
  {
    "key": "cmd+0",
    "command": "-workbench.action.focusSideBar"
  },
  {
    "key": "cmd+0",
    "command": "workbench.action.focusLastEditorGroup"
  },
  // === Change editor focus
  // 
  //  cmd+k cmd+left - focus left editor group
  //  cmd+k cmd+right - focus right editor group
  //  cmd+k cmd+up - focus above editor group
  //  cmd+k cmd+down - focus below editor group
  // === Diff View:
  {
    "key": "f4",
    "when": "isInDiffEditor",
    "command": "git.openFile"
  },
  // === Usability
  //
  // Show all commands
  {
    "key": "shift shift",
    "command": "workbench.action.showCommands"
  },
  // Show all views
  {
    "key": "alt alt",
    "command": "workbench.action.openView"
  },
  {
    "key": "alt+cmd+=",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "alt+cmd+-",
    "command": "workbench.action.decreaseViewWidth"
  },
  // === Terminal
  // cmd+k            - clear terminal
  // cltr+`           - toggle terminal
  // ctrl+shift+`     - create new terminal
  // ctrl+shift+alt+` - csreate a new terminal in a separate window.
  // shift+cmd+[      - switch previous terminal
  // shift+cmd+]      - switch next terminal
  // cmd+up           - scroll up
  // cmd+down         - scroll down  
  //
  // === Copilot
  // Inline suggestions:
  //    alt+\            - trigger suggest
  //    ctrl+enter       - show all suggestions
  //    shift+alt+]      - next inline suggest
  //    shift+alt+[      - previous inline suggest
  //    tab              - acceptn the entire suggestion
  //    cmd+right        - accept next word
  //
  // Autcompletions:
  //    ctrl+space       - trigger auto suggestions
  {
    "key": "alt+\\",
    "command": "editor.action.inlineSuggest.trigger"
  },
  {
    "key": "ctrl+enter",
    "command": "github.copilot.generate"
  },
  {
    "key": "shift+alt+]",
    "command": "editor.action.inlineSuggest.showNext"
  },
  {
    "key": "shift+alt+[",
    "command": "editor.action.inlineSuggest.showPrevious"
  },
